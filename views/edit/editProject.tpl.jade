unless isWaiting
  #edit-project-pad
    .input-group
      input#title-input(placeholder="Project title")
    .input-group
      input#tags-input(placeholder="Project tags")
      span.icon-tags2
    .input-group
      select#license-select(placeholder="License")
        each licenseOptions
          option(value=id, selected=isSelected) #{name}
    #description-editor
      +descriptionEditor
    #pictures-editor
      +picturesEditor
    #instructions-editor
      +instructionsEditor
    #files-editor
      +filesEditor
    #edit-buttons
      button#save-project.pure-button.pure-button-primary Save
      button#cancel-edit.pure-button Cancel
      a#remove-project(href="#") Remove this project
else
  +loading
